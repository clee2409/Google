<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:weightSum="1"
              android:layout_marginStart="@dimen/sides_margin"
              android:layout_marginLeft="@dimen/sides_margin"
              android:layout_marginEnd="@dimen/sides_margin">

    <ImageView
        android:layout_width="@dimen/thumbnail_size"
        android:layout_height="@dimen/thumbnail_size"
        android:scaleType="fitXY"
        android:id="@+id/user_search_result_icon_iv"
        android:layout_marginRight="@dimen/slim_margins"
        android:layout_marginEnd="@dimen/slim_margins"
        android:layout_gravity="center"
        android:contentDescription="@string/user_profile_image"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_search_result_name_tv"
            android:textSize="@dimen/bigger_text_size"
            android:textColor="@color/Black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_search_result_public_description_tv"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_search_result_time_since_creation_tv"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_search_result_karma_count_tv"/>

    </LinearLayout>

</LinearLayout>